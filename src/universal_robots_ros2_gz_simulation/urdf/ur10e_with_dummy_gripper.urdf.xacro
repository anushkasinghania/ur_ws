<?xml version="1.0"?>
<robot name="ur10e_with_dummy_gripper" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Simplified UR10e-like chain (minimal, self-contained) -->
  <!-- base_link -->
  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry><box size="0.2 0.2 0.1"/></geometry>
      <material name="grey"/>
    </visual>
    <collision><geometry><box size="0.2 0.2 0.1"/></geometry></collision>
  </link>

  <!-- Joints and intermediate links (simplified lengths/origins) -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="150" velocity="1.5"/>
  </joint>
  <link name="shoulder_link"/>

  <joint name="shoulder_lift_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="150" velocity="1.5"/>
  </joint>
  <link name="upper_arm_link"/>

  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="150" velocity="1.5"/>
  </joint>
  <link name="forearm_link"/>

  <joint name="wrist_1_joint" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_1_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="28" velocity="1.5"/>
  </joint>
  <link name="wrist_1_link"/>

  <joint name="wrist_2_joint" type="revolute">
    <parent link="wrist_1_link"/>
    <child link="wrist_2_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="28" velocity="1.5"/>
  </joint>
  <link name="wrist_2_link"/>

  <joint name="wrist_3_joint" type="revolute">
    <parent link="wrist_2_link"/>
    <child link="wrist_3_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.14" upper="3.14" effort="28" velocity="1.5"/>
  </joint>
  <link name="wrist_3_link"/>

  <!-- End effector (ee_link) -->
  <link name="ee_link"/>
  <joint name="ee_fixed_joint" type="fixed">
    <parent link="wrist_3_link"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Simple Dummy Gripper(two small boxes, fixed to ee_link) -->
  <link name="dummy_gripper_base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.06 0.06 0.02"/></geometry>
    </visual>
    <collision><geometry><box size="0.06 0.06 0.02"/></geometry></collision>
  </link>

  <joint name="dummy_gripper_mount" type="fixed">
    <parent link="ee_link"/>
    <child link="dummy_gripper_base"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
  </joint>

  <link name="dummy_left_finger">
    <visual>
      <origin xyz="0.03 0 0" rpy="0 0 0"/>
      <geometry><box size="0.04 0.01 0.01"/></geometry>
    </visual>
    <collision><geometry><box size="0.04 0.01 0.01"/></geometry></collision>
  </link>

  <link name="dummy_right_finger">
    <visual>
      <origin xyz="-0.03 0 0" rpy="0 0 0"/>
      <geometry><box size="0.04 0.01 0.01"/></geometry>
    </visual>
    <collision><geometry><box size="0.04 0.01 0.01"/></geometry></collision>
  </link>

  <joint name="dummy_left_fixed" type="fixed">
    <parent link="dummy_gripper_base"/>
    <child link="dummy_left_finger"/>
    <origin xyz="0.02 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="dummy_right_fixed" type="fixed">
    <parent link="dummy_gripper_base"/>
    <child link="dummy_right_finger"/>
    <origin xyz="-0.02 0 0" rpy="0 0 0"/>
  </joint>

  <!-- minimal transmission placeholder to avoid some tools complaining (safe as fixed gripper) -->
  <transmission name="dummy_gripper_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="dummy_left_fixed"/>
    <actuator name="gripper_actuator"/>
  </transmission>

</robot>
